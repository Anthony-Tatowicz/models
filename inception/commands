bazel-bin/inception/build_image_data \
  --train_directory="${TRAIN_DIR}" \
  --validation_directory="${VALIDATION_DIR}" \
  --output_directory="${OUTPUT_DIR}" \
  --labels_file="${LABELS_FILE}" \
  --train_shards=24 \
  --validation_shards=8 \
  --num_threads=8 \
  --resize=True


  TRAIN_DIR=/notebooks/data/statefarmchallenge/imgs/train \
  VALIDATION_DIR=/notebooks/data/statefarmchallenge/imgs/validation \
  OUTPUT_DIR=/notebooks/data/statefarmchallenge \
  LABELS_FILE=/notebooks/sfc/labels.txt


  bazel-bin/inception/drivers_train \
    --train_dir="${TRAIN_DIR}" \
    --data_dir="${DATA_DIR}" \
    --pretrained_model_checkpoint_path="${PRETRAINED_DIR}" \
    --fine_tune=True \
    --initial_learning_rate=0.01 \
    --input_queue_memory_factor=12 \
    --batch_size=64 \
    --max_steps=100000 \
    --num_epochs_per_decay=30 \
    --num_preprocess_threads=4 \
    --num_readers=4

TRAIN_DIR=/notebooks/data/statefarmchallenge/train
DATA_DIR=/notebooks/data/statefarmchallenge/train-data
PRETRAINED_DIR=/notebooks/data/statefarmchallenge/train/model.ckpt-5000


bazel-bin/tensorflow/examples/image_retraining/retrain \
  --image_dir /notebooks/data/statefarmchallenge/imgs/train \
  --how_many_training_steps 80000 \
  --learning_rate 1e-3
